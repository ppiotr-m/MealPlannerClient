<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.customization.SettingsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profilePhotoImgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@mipmap/zenon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/usernameTV"
        style="@style/listHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Zenek Wertygo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePhotoImgView" />

    <TextView
        android:id="@+id/accountInfoTV"
        style="@style/listElementText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/settings_label"
        android:paddingHorizontal="16dp"
        android:text="@string/account_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameTV" />

    <TextView
        android:id="@+id/accountInfoTV2"
        style="@style/listElementText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/settings_label"
        android:paddingHorizontal="16dp"
        android:text="@string/meals_prefs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationTV" />

        <TextView
            android:id="@+id/accountInfoTV3"
            style="@style/listElementText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/settings_label"
            android:paddingHorizontal="16dp"
            android:text="@string/food_preferences"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/portionsTV2" />

    <TextView
        android:id="@+id/emailLabelTV"
        style="@style/smallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/email2"
        app:layout_constraintBaseline_toBaselineOf="@+id/emailTV"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/emailTV"
        style="@style/normalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="zenek.wertygo@gmail.com"
        app:layout_constraintStart_toStartOf="@id/barrier"
        app:layout_constraintTop_toBottomOf="@+id/accountInfoTV" />

    <Button
        android:id="@+id/editEmailBtn"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_chevron_right_black_18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountInfoTV" />

    <Button
        android:id="@+id/editPasswordBtn"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_chevron_right_black_18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailTV" />

    <Button
        android:id="@+id/editLocationBtn"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_chevron_right_black_18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordTV" />

    <TextView
        android:id="@+id/passwordLabelTV"
        style="@style/smallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/password2"
        app:layout_constraintBaseline_toBaselineOf="@+id/passwordTV"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/passwordTV"
        style="@style/normalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="*********"
        app:layout_constraintStart_toEndOf="@+id/barrier"
        app:layout_constraintTop_toBottomOf="@+id/emailTV" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="passwordLabelTV,emailLabelTV" />

    <TextView
        android:id="@+id/locationLabelTV"
        style="@style/smallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/location"
        app:layout_constraintBaseline_toBaselineOf="@+id/locationTV"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/locationTV"
        style="@style/normalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="Naggykutas, Hungary"
        app:layout_constraintStart_toStartOf="@id/barrier"
        app:layout_constraintTop_toBottomOf="@+id/passwordTV" />

    <TextView
        android:id="@+id/portionsLabelTV"
        style="@style/smallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/portions_per_meal"
        app:layout_constraintBaseline_toBaselineOf="@+id/subtractPortionsBtn"
        app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/cookingTimeLabelTV"
            style="@style/smallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/cooking_time_label"
            app:layout_constraintBaseline_toBaselineOf="@+id/portionsTV3"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/portionsTV"
        style="@style/listHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="4"
        app:layout_constraintStart_toEndOf="@+id/subtractPortionsBtn"
        app:layout_constraintTop_toTopOf="@+id/subtractPortionsBtn" />

    <TextView
        android:id="@+id/portionsTV3"
        style="@style/listHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="&lt;50 min"
        app:layout_constraintStart_toEndOf="@+id/subtractCookingTimeBtn"
        app:layout_constraintTop_toTopOf="@+id/subtractCookingTimeBtn" />

    <TextView
        android:id="@+id/portionsTV2"
        style="@style/listHeaderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="5"
        app:layout_constraintStart_toEndOf="@+id/subtractMealsBtn"
        app:layout_constraintTop_toTopOf="@+id/subtractMealsBtn" />

    <Button
        android:id="@+id/subtractPortionsBtn"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_remove_red_18dp"
        app:layout_constraintStart_toStartOf="@id/barrier2"
        app:layout_constraintTop_toBottomOf="@+id/subtractCookingTimeBtn" />

    <Button
        android:id="@+id/subtractCookingTimeBtn"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_remove_red_18dp"
        app:layout_constraintStart_toStartOf="@id/barrier2"
        app:layout_constraintTop_toBottomOf="@+id/accountInfoTV2" />

    <Button
        android:id="@+id/subtractMealsBtn"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_remove_red_18dp"
        app:layout_constraintStart_toStartOf="@id/barrier2"
        app:layout_constraintTop_toBottomOf="@+id/subtractPortionsBtn" />

    <Button
        android:id="@+id/addPortionsBtn"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_add_red_18dp"
        app:layout_constraintStart_toEndOf="@+id/portionsTV"
        app:layout_constraintTop_toBottomOf="@+id/addPortionsBtn3" />

    <Button
        android:id="@+id/addPortionsBtn3"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_add_red_18dp"
        app:layout_constraintStart_toEndOf="@+id/portionsTV3"
        app:layout_constraintTop_toBottomOf="@+id/accountInfoTV2" />

    <Button
        android:id="@+id/addPortionsBtn2"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_add_red_18dp"
        app:layout_constraintStart_toEndOf="@+id/portionsTV2"
        app:layout_constraintTop_toBottomOf="@+id/addPortionsBtn" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="right"
        app:constraint_referenced_ids="portionsLabelTV,mealsLabelTV,cookingTimeLabelTV"
        tools:layout_editor_absoluteX="411dp" />

    <TextView
        android:id="@+id/mealsLabelTV"
        style="@style/smallText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="@string/meals_per_mealplan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subtractPortionsBtn" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>