<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.userPreferences.oldFragments.EditHeightActivity">

    <EditText
        android:id="@+id/goalET"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/goal_hint"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.6" />

    <TextView
        android:id="@+id/goalEditionLabelTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/goal_edition_label"
        app:layout_constraintBottom_toTopOf="@+id/goalET"
        app:layout_constraintStart_toStartOf="@+id/goalET" />

    <TextView
        android:id="@+id/goalUnitTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="@string/kg"
        app:layout_constraintBottom_toBottomOf="@+id/goalEditionLabelTV"
        app:layout_constraintStart_toEndOf="@+id/goalEditionLabelTV" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goalET"
        app:layout_constraintWidth_percent="0.6">

        <Button
            android:id="@+id/cancelGoalBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:paddingRight="4dp"
            android:text="@android:string/cancel" />

        <Button
            android:id="@+id/confirmGoalBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:paddingLeft="4dp"
            android:text="@android:string/ok" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>