<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/nutritionListItemQuantityET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="@string/portion_edit_hint"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/unitPortionTV"
        style="@style/normalTextBoldDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/portions"
        app:layout_constraintBottom_toBottomOf="@+id/nutritionListItemQuantityET"
        app:layout_constraintStart_toEndOf="@+id/nutritionListItemQuantityET"
        app:layout_constraintTop_toTopOf="@+id/nutritionListItemQuantityET" />

</androidx.constraintlayout.widget.ConstraintLayout>