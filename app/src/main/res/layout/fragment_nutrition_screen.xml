<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="piotr.michalkiewicz.mealplannerclient.nutrition.viewmodel.NutritionSharedViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nutritionWholeViewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/nutritionDataContainerLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nutritionTopTabLayout"
            app:layout_constraintVertical_bias="0.0">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/nutritionScreenViewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/nutritionTabLayout"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorPrimary"
                app:tabBackground="@drawable/tab_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp" />
            <!-- TODO Make listview scrollable, probably recyclerview becouse can't put listview inside scrollview -->
            <ListView
                android:id="@+id/nutritionMealsListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="32dp"></ListView>

        </LinearLayout>

        <TextView
            android:id="@+id/loadingTempTV"
            style="@style/bigPlainTextDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/previousDayBtn"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:background="@color/opaque"
                android:onClick="@{() -> viewModel.goToPreviousDay()}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/nutritionDateTV"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_white_arrow_back_ios_18" />

            <TextView
                android:id="@+id/nutritionDateTV"
                style="@style/normalTextBoldBright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.date.toString()}"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/nextDayBtn"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:background="@color/opaque"
                android:onClick="@{() -> viewModel.goToNextDay()}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/nutritionDateTV"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_white_arrow_forward_ios_18" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/nutritionTopTabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            app:tabIndicatorColor="@color/white"
            app:tabTextColor="@color/white">

        </com.google.android.material.tabs.TabLayout>

        <!--com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:onClick="@{() -> viewModel.addMeal()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_white_add_64" /-->

        <com.imangazaliev.circlemenu.CircleMenu
            android:id="@+id/nutritionCircleMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:startAngle="-150"
            app:menuIcon="plus"
            app:maxAngle="180"
            app:buttonColors="@array/colors"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:buttonIcons="@array/icons" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>