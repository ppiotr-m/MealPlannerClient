<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.MainMenuActivity"
    tools:showIn="@layout/activity_main_menu"
    android:background="@mipmap/temp_login_bckgrnd">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/opaqueBlack"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_height="150dp"
                android:id="@+id/yourWeekBtn"
                android:text="@string/your_week_btn"
                android:layout_weight="1"
                android:background="@mipmap/calendar_thumbnail"/>
            <Button
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/yourDietBtn"
                android:text="@string/your_diet_btn"
                android:layout_weight="1"
                android:background="@mipmap/diet_thumbnail"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/recipiesBtn"
                android:text="@string/recipies_btn"
                android:layout_weight="1"
                android:background="@mipmap/recipies_thumbnail"/>
            <Button
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/groceriesBtn"
                android:text="@string/groceries_btn"
                android:layout_weight="1"
                android:background="@mipmap/groceries_thumbnail"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>