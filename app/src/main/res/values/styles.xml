<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="buttonText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="bigPlainText">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RecipeTitle">
        <item name="android:textSize">2sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="listElementText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="hyperlink">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/hyperlink_blue</item>
    </style>

    <style name="normalText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="normalTextBold">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="recipeAbout">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cooking_step_header">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="smallText">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="smallBoldText">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="myHorizontalProgressBarStyleBase" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">10dp</item>
    </style>

    <style name="myHorizontalProgressBarStyle" parent="myHorizontalProgressBarStyleBase">
        <item name="android:progressDrawable">@drawable/horizontal_progress_bar</item>
    </style>

    <style name="recipeListElement">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
    </style>


    <style name="recipeImgTextOverlay">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="recipe_thumbnail_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="search_icon_top_label">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RatingBar">
        <item name="android:scaleX">0.7</item>
        <item name="android:scaleY">0.7</item>
        <item name="android:progressBackgroundTint">@color/lightGrey</item>
        <item name="android:progressTint">@color/goldenYellow</item>
    </style>

    <style name="topBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
    </style>
</resources>
